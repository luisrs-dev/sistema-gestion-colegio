{% extends 'dashboard.html.twig' %}

{% block title %}Alumno index{% endblock %}




{% block body %}

        <div class="row">
            <div class="card shadow col-md-10">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                    </div>
                    <div class="card-body">        
                        <form action="{{ path('list_notas') }}" method="post" >
                            <div class="row">
    
                                <div class="col-md-4">  
                                    <label for="">Asignatura</label>
                                    <select class="form-select form-control" aria-label="Default select example" name="cursoAsignatura">
                                        <option selected disabled>Seleccione una asignatura</option>
                                        {% for cursoAsignatura in cursoAsignaturas %}
                                        <option value="{{cursoAsignatura.id}}">{{cursoAsignatura.curso }} AÃ±o - {{cursoAsignatura.asignatura}}</option>
                                        {% endfor %}
                                      </select>
                                </div>
                                <div class="col-md-4">  
                                    <label for="">Semestre</label>
                                    <select class="form-select form-control" aria-label="Default select example" name="periodo">
                                        <option disabled selected>Seleccione un semestre</option>
                                        {% for periodo in periodos %}
                                        <option value="{{periodo.id}}">{{periodo.nombre}}</option>
                                        {% endfor %}
                                      </select>
                                </div>
                                <div class="col-md-4 mt-4">
                                    <button type="submit" class="btn btn-success">Ir a registro</button>
                                </div>
                            </div>         
                        </form>

                    </div>     
            </div>     



        </div>  
{% endblock %}
